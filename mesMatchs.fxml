<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vBox" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.MesMatchs">
   <children>
      <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0">
        <columns>
            <TableColumn fx:id="id" prefWidth="52.0" text="Id" />
            <TableColumn fx:id="sportMatch" prefWidth="101.0" text="Sport" />
            <TableColumn fx:id="eq1Match" prefWidth="143.0" text="Equipe 1" />
            <TableColumn fx:id="eq2Match" minWidth="0.0" prefWidth="136.0" text="Equipe 2" />
            <TableColumn fx:id="dateMatch" maxWidth="165.0" prefWidth="165.0" text="Date" />
        </columns>
      </TableView>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#parier" prefHeight="26.0" prefWidth="623.0" text="Parier" />
         </children>
      </HBox>
      <HBox fx:id="hBox" prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="sport" promptText="sport" />
            <TextField fx:id="eq1" promptText="equipe 1" />
            <TextField fx:id="eq2" promptText="equipe 2" />
            <TextField fx:id="date" promptText="date" />
            <Button mnemonicParsing="false" onAction="#ajouterMatch" prefHeight="26.0" prefWidth="201.0" text="Ajouter" />
         </children></HBox>
   </children>
</VBox>
